isbn = {2041-1723 (Electronic) 2041-1723 (Linking)},
issn = {2041-1723},
journal = {Nature communications},
pages = {7842},
pmid = {26198207},
title = {{Predicting the stability of large structured food webs.}},
volume = {6},
year = {2015}
}
@article{Gravel2013,
