booktitle = {Advances In Ecological Research},
doi = {http://dx.doi.org/10.1016/B978-0-12-386475-8.00005-8},
editor = {Research, Andrea Belgrano B T - Advances in Ecological},
file = {:home/leonardo/Mendeley/Advances In Ecological Research/Jacob et al. - 2011 - The role of body size in complex food webs A cold case.pdf:pdf},
isbn = {0065-2504},
