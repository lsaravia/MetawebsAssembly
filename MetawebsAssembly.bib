journal = {Ecological Modelling},
keywords = {Colombian Pacific,Ecosystems,Food webs,Graph theory,Interspecific relationships,Trophic structure},
pages = {23--33},
title = {{The structure of a marine tropical food web, and its implications for ecosystem-based fisheries management}},
url = {http://www.sciencedirect.com/science/article/pii/S0304380016300321},
volume = {328},
