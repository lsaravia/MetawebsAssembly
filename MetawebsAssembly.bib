keywords = {Body size,Niche model,food web,metaweb},
month = {nov},
number = {11},
pages = {1083--1090},
title = {{Inferring food web structure from predator–prey body size relationships}},
url = {http://onlinelibrary.wiley.com/doi/10.1111/2041-210X.12103/abstract},
volume = {4},
