issn = {2167-8359},
journal = {PeerJ},
keywords = {Extinction,Food web,Functional response,Habitat complexity,Habitat loss,Individual-based model,Interaction strength,Ordinary differential equation,Patch size,Population dynamics},
pages = {e2993},
title = {{How patch size and refuge availability change interaction strength and population dynamics: a combined individual- and population-based modeling experiment}},
