booktitle = {Large-Scale Ecology: Model Systems to Global Perspectives},
doi = {https://doi.org/10.1016/bs.aecr.2016.08.009},
editor = {Dumbrell, Alex J and Kordas, Rebecca L and Woodward, Guy B T - Advances in Ecological Research},
file = {:home/leonardo/Mendeley/Large-Scale Ecology Model Systems to Global Perspectives/Gray et al. - 2016 - Chapter Ten - Recovery and Nonrecovery of Freshwater Food Webs from the Effects of Acidification(2).pdf:pdf},
isbn = {0065-2504},
keywords = {Communities,Lakes and streams,Monitoring,Networks,Redundancy,Restoration},
pages = {475--534},
