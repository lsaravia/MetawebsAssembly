issn = {0012-9658},
journal = {Ecology},
keywords = {Scaling,demographic stochasticity,extinction prone,metapopulation,synchronization},
month = {nov},
number = {5},
pages = {1214--1227},
title = {{Consistent scaling of persistence time in metapopulations}},
